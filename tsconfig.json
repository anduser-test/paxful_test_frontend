{
  "compilerOptions": {
    "outDir": "./script/",
    "rootDir": "./src",
    "baseUrl": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [ "node_modules/@types", "./global-defenitions" ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "tslib" : [
        "node_modules/tslib/tslib.d.ts"
      ],
      "react": [
        "node_modules/@types/react/index.d.ts"
      ],
      "@assets/*": [
        "src/assets/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./src/types/externals/*",
    "./global-defenitions/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}